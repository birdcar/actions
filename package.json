{
  "name": "actions",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "description": "A personal GitHub Actions repository",
  "scripts": {
    "new": "bun run scripts/new-action.ts",
    "build": "bun run scripts/build.ts",
    "build:watch": "bun run scripts/build.ts --watch",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "clean": "rm -rf auto-release/dist create-release/dist deploy-to-heroku/dist poetry-export/dist poetry-install/dist"
  },
  "workspaces": [
    "auto-release",
    "create-release",
    "deploy-to-heroku",
    "poetry-export",
    "poetry-install"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "^1.1.0",
    "bun-types": "^1.1.0"
  }
}
